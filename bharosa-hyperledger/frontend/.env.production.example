# Production Environment Variables for React Frontend
# Copy this file to .env.production when deploying

# API URL - Use relative path for same-domain deployment
# This will use the same domain as the frontend (backend serves frontend)
REACT_APP_API_URL=/api

# Alternative: If deploying frontend and backend separately
# REACT_APP_API_URL=https://your-backend-url.onrender.com/api

# Environment
REACT_APP_ENVIRONMENT=production

# Optional: Blockchain Configuration
# REACT_APP_BLOCKCHAIN_NETWORK=https://mainnet.infura.io/v3/YOUR_KEY
# REACT_APP_CONTRACT_ADDRESS=0xYourContractAddress
