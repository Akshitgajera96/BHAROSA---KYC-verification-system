# üîê Bharosa KYC System - Environment Configuration Template
# Copy this file to .env and fill in your actual values

# =====================================
# DATABASE CONFIGURATION
# =====================================
MONGODB_URI=mongodb://bharosa_admin:YOUR_PASSWORD_HERE@mongodb:27017/bharosa_kyc?authSource=admin
MONGO_INITDB_ROOT_USERNAME=bharosa_admin
MONGO_INITDB_ROOT_PASSWORD=YOUR_SECURE_PASSWORD_HERE
MONGO_INITDB_DATABASE=bharosa_kyc

# =====================================
# BACKEND API CONFIGURATION
# =====================================
NODE_ENV=development
PORT=5000
CORS_ORIGIN=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5000

# =====================================
# JWT AUTHENTICATION
# =====================================
# IMPORTANT: Generate a strong random secret for production!
# Example: openssl rand -base64 64
JWT_SECRET=CHANGE_THIS_TO_STRONG_RANDOM_SECRET_IN_PRODUCTION
JWT_EXPIRE=7d

# =====================================
# AI SERVICE CONFIGURATION
# =====================================
AI_SERVICE_URL=http://ai_service:8000
PYTHONUNBUFFERED=1
LOG_LEVEL=info

# AI Verification Thresholds (0-100)
FACE_MATCH_THRESHOLD=75
OCR_CONFIDENCE_THRESHOLD=60
IMAGE_QUALITY_THRESHOLD=50
TAMPERING_THRESHOLD=70

# Development Flags (set to false in production)
DUMMY_AI_VERIFICATION=false
SKIP_ARIES_CREDENTIAL=true

# =====================================
# BLOCKCHAIN CONFIGURATION
# =====================================
BLOCKCHAIN_NETWORK=http://ganache:8545
# WARNING: Never commit real private keys! Use separate wallets for dev/prod
BLOCKCHAIN_PRIVATE_KEY=0xac0974bec39a17e36ba4a6b4d238ff944bacb478cbed5efcae784d7bf4f2ff80
BLOCKCHAIN_CONTRACT_ADDRESS=0x5FbDB2315678afecb367f032d93F642f64180aa3

# For production, use environment-specific RPC URLs:
# BLOCKCHAIN_NETWORK=https://mainnet.infura.io/v3/YOUR_INFURA_KEY
# BLOCKCHAIN_NETWORK=https://polygon-mumbai.g.alchemy.com/v2/YOUR_ALCHEMY_KEY

# =====================================
# IPFS CONFIGURATION (Optional)
# =====================================
ENABLE_IPFS=false
IPFS_PROVIDER=pinata
# Pinata Configuration
PINATA_API_KEY=your_pinata_api_key_here
PINATA_SECRET_KEY=your_pinata_secret_key_here
# Infura Configuration (alternative)
INFURA_PROJECT_ID=your_infura_project_id
INFURA_PROJECT_SECRET=your_infura_secret

# =====================================
# HYPERLEDGER ARIES CONFIGURATION
# =====================================
ARIES_AGENT_URL=http://localhost:8021
ARIES_ADMIN_API_KEY=your_aries_admin_api_key
ARIES_WEBHOOK_URL=http://backend:5000/webhooks/aries

# =====================================
# FRONTEND CONFIGURATION
# =====================================
REACT_APP_API_URL=http://localhost:5000/api
REACT_APP_ENVIRONMENT=development

# =====================================
# SECURITY & RATE LIMITING
# =====================================
# Rate limit: max requests per window
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=900000

# Upload limits (in MB)
MAX_FILE_SIZE=10
MAX_FILES_PER_REQUEST=5

# =====================================
# EMAIL CONFIGURATION (Optional)
# =====================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_specific_password
EMAIL_FROM=noreply@bharosa.com

# =====================================
# MONITORING & LOGGING
# =====================================
LOG_LEVEL=info
ENABLE_DEBUG_LOGGING=false
ENABLE_PERFORMANCE_TRACKING=true

# =====================================
# PRODUCTION SETTINGS
# =====================================
# Uncomment and configure for production deployment
# NODE_ENV=production
# MONGODB_URI=mongodb+srv://user:pass@cluster.mongodb.net/bharosa_kyc
